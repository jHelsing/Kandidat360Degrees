<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
               android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/colorBackground"
    android:id="@+id/accDetailsMainLayout">

    <TextView
        android:text="@string/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createAccountView"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:textSize="24sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/title_padding_without_icon"
        android:paddingRight="@dimen/title_padding_without_icon"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/createAccUsernameField" android:hint="@string/username"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/create_acc_vertical_margin"/>

    <TextView
            android:text="@string/min_5_chars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createAccUsernameInfoView"
            android:textStyle="normal|italic" android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/createAccEmailField" android:hint="@string/email"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/create_acc_vertical_margin"/>

    <TextView
        android:text="Email text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createEmailErrorText"
        android:textStyle="normal|italic"
        android:elevation="0dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/createAccPassword1Field" android:hint="@string/password"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/create_acc_vertical_margin"/>

    <TextView
        android:id="@+id/createAccPasswordInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/min_5_chars"
        android:textStyle="normal|italic" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/createAccPassword2Field" android:hint="@string/retype_password"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/create_acc_vertical_margin"/>
    <Button
            android:text="@string/create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/createAccCreateAccButton"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/create_acc_vertical_margin" android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" android:textAllCaps="false" android:textSize="18sp"/>

</LinearLayout>