<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_friend_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        tools:src="@drawable/friend_added_icon" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/notification_friend_image"
        android:layout_toLeftOf="@+id/buttonCancelNotification"
        android:layout_toRightOf="@+id/notification_friend_image"
        android:maxLength="30"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:text="Title" />

    <ImageButton
        android:id="@+id/buttonCancelNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/buttonAcceptNotification"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cross" />

    <ImageButton
        android:id="@+id/buttonAcceptNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/temp_check_black" />

</RelativeLayout>