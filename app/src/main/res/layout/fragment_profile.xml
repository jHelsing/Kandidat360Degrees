<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_intro_overlay_background_color">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/place_autocomplete_prediction_secondary_text">

        <ImageView
            app:srcCompat="@drawable/profile_icon"
            android:id="@+id/imageView"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="MrCool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameText"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="105"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/picturesNbr"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:text="Pictures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="84"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/friendsNbr"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:text="Friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/friendsText"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content">

                    <TextView
                        android:text="3.5k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/likesNbr"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:text="Likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/likesText"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/pictureListView" />

</LinearLayout>